@model ProjectManage.Models.ProjectUser

@{
    ViewData["Title"] = "Add Participant";
}
<link rel="stylesheet" href="~/css/Adding.css" asp-append-version="true" />
<link href="https://fonts.googleapis.com/css2?family=Fredoka+One&display=swap" rel="stylesheet">

<div class="project-header">
    <h1 class="Title">Add Participant</h1>
</div>

<div class="project-container">
    <form method="post" asp-controller="Manager" asp-action="AddingParticipants">
        <label for="nickname">Nickname:</label>
        <input for="nickname" type="text" id="nickname" name="nickname" required /><br />

        <label for="password">Password:</label>
        <input for="password" type="password" id="password" name="nickname" required /><br />

        <label asp-for="Role">Role:</label>
        <input asp-for="Role" type="text" id="Role" required /><br />
        <span asp-validation-for="Role" class="text-danger"></span>

        <label asp-for="Tasks">Tasks:</label>
        <input asp-for="Tasks" type="text" id="Tasks" required /><br />
        <span asp-validation-for="Tasks" class="text-danger"></span>

        @if (Model?.ProjectId != null)
        {
            <input type="hidden" name="projectId" value="@Model.ProjectId" />
        }
        else
        {
            <p>Error: Project ID is not available.</p>
        }

        <button type="submit" class="add-button">Add +</button>
    </form>
</div>